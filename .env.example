# GDE SciBOTICS CMS Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME="GDE SciBOTICS CMS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gde_scibotics_db
DB_USER=root
DB_PASS=

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@gde.gov.za
MAIL_FROM_NAME="GDE SciBOTICS"

# SMS Configuration (for notifications)
SMS_PROVIDER=clickatell
SMS_API_KEY=
SMS_FROM=GDE_SciBOTICS

# WhatsApp Configuration (for notifications)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=public/uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Settings
SESSION_LIFETIME=120
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# Competition Settings
COMPETITION_YEAR=2025
REGISTRATION_DEADLINE=2025-07-25
COMPETITION_DATE=2025-09-27

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log